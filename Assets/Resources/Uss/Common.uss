:root {
    --color-black: rgb(0, 0, 0);
    --color-white: rgb(255, 255, 255);
    --color-red: rgb(236, 59, 54);
    --color-green: rgb(89, 168, 90);
    --color-gray: rgb(190, 190, 190);
